/*
  qBittorrent Minimalistic Theme
  Dark gray monochrome aesthetic
*/

QWidget {
  background: #191919;
  color: #e0e0e0;
  border: none;
}

QWidget:disabled {
  color: #666666;
}

/*
  QMenuBar
*/

QMenuBar {
  background: #191919;
}

QMenuBar::item {
  padding: 5px 10px;
  width: 100%;
  color: #e0e0e0;
}

QMenuBar::item:selected {
  background: #191919;
  color: #ffffff;
}

QMenuBar::item:pressed {
  background: #191919;
  color: #ffffff;
}

/*
  QMenu
*/

QMenu {
  background: #191919;
  border: 1px solid #2a2a2a;
}

QMenu::item {
  margin: 0;
  padding: 5px 10px 5px 5px;
  background: #191919;
  color: #e0e0e0;
}

QMenu::item:hover,
QMenu::item:selected {
  background: #2a2a2a;
  color: #ffffff;
}

QMenu::separator {
  background: #333333;
  height: 1px;
}

QMenu::icon {
  padding: 0 5px;
}

QMenu::indicator {
  width: 16px;
  height: 16px;
  left: 5px;
}

QMenu::indicator:non-exclusive {
  width: 16px;
  height: 16px;
  border: 1px solid #2a2a2a;
  background: #191919;
  border-radius: 2px;
}

QMenu::indicator:non-exclusive:checked {
  border-color: #555555;
}

/*
  QToolBar
*/

QToolBar {
  background: #191919;
  border-top: 1px solid #2a2a2a;
  border-bottom: 1px solid #2a2a2a;
}

QToolBar::separator {
  background: #2a2a2a;
  width: 1px;
}

/*
  QToolButton
*/

QToolButton {
  border: none;
  background: #191919;
  padding: 6px;
  margin: 2px;
  min-width: 32px;
  min-height: 32px;
}

QToolButton:hover {
  background: #2a2a2a;
  color: #ffffff;
  border: none;
  border-radius: 3px;
}

QToolButton:pressed {
  background: #3a3a3a;
  color: #ffffff;
}

/*
  QLineEdit in QToolBar
*/

QToolBar QLineEdit {
  background: #191919;
  margin: 0 5px;
}

/*
  QSplitter
*/

QSplitter::handle {
  background: #2a2a2a;
}

QSplitter::handle:horizontal {
  width: 1px;
}

QSplitter::handle:vertical {
  height: 1px;
}

QSplitter::handle:pressed {
  background: #3a3a3a;
}

/*
  QMainWindow
*/

QMainWindow {
  background: #191919;
}

/*
  QFrame
*/

QFrame, QLabel {
  outline: none;
  background: #191919;
  color: #e0e0e0;
}

QLabel:disabled {
  color: #666666;
}

/*
  QToolTip
*/

QToolTip {
  padding: 5px;
  background: #191919;
  border: 2px solid #2a2a2a;
  color: #e0e0e0;
}

/*
  QTabWidget
*/

QTabWidget::pane {
  margin: 0;
  padding: 0;
}

/*
  QTABBAR
  top
*/

QTabBar {
  qproperty-drawBase: 0;
}

QTabBar::tab:top {
  background: #2a2a2a;
  color: #e0e0e0;
  margin: 0 2px 0 0;
  padding: 6px 10px;
  border: 1px solid #3a3a3a;
  border-bottom: 2px solid transparent;
  border-top-left-radius: 3px;
  border-top-right-radius: 3px;
}

QTabBar::tab:top:hover {
  background: #3a3a3a;
  color: #ffffff;
}

QTabBar::tab:top:selected {
  background: #191919;
  color: #ffffff;
  border-bottom: 2px solid #555555;
}

/*
  QListView
*/
QListView {
  background: #191919;
  color: #e0e0e0;
  border: none;
}

QListView::item {
  padding: 5px;
}

QListView::item:hover {
  background: #2a2a2a;
  color: #ffffff;
}

QListView::item:selected:active {
  outline: none;
  background: #3a3a3a;
  color: #ffffff;
  padding: 5px;
}

QListView::item:selected:!active {
  background: #3a3a3a;
  color: #ffffff;
  padding: 5px;
}

/* Ensure consistent selection visuals across item views */
QTreeView, QTableView, QListView {
  selection-background-color: #3a3a3a;
  selection-color: #ffffff;
}

/*
  QTableView
*/

QTableView {
  background: #1f1f1f;
  border: none;
}

QTableView QLabel {
  padding: 0 5px;
}

QTableView QCheckBox, QTableView QLabel {
  padding: 0 5px;
}

/*
  QTreeView
*/

QTreeView {
  background: #191919;
  color: #e0e0e0;
  border: none;
}

QTreeView::item {
  padding: 5px;
  border: none;
}

QTreeView::item:hover {
  background: #2a2a2a;
  color: #ffffff;
}

QTreeView::item:pressed {
  background: #3a3a3a;
  color: #ffffff;
  padding: 5px;
}

QTreeView::item:selected {
  background: #3a3a3a;
  color: #ffffff;
  padding: 5px;
}

QTreeView:disabled {
  color: #666666;
}

QAbstractItemView {
  alternate-background-color: #191919;
}

/*
  QStatusBar
*/

QStatusBar {
  background: #191919;
  border-top: 1px solid #2a2a2a;
}

/*
  QProgressBar
*/

QProgressBar {
  text-align: center;
  background: #151515;
  border: 1px solid #2a2a2a;
  border-radius: 2px;
  color: #e0e0e0;
}

QProgressBar::chunk {
  background: #555555;
  border-radius: 2px;
}

QProgressBar::chunk:disabled {
  background: #333333;
}

/*
  QSlider
*/
QSlider::groove:horizontal {
  height: 4px;
  background: #2a2a2a;
  border-radius: 2px;
}
QSlider::handle:horizontal {
  width: 12px;
  height: 12px;
  margin: -4px 0;
  background: #555555;
  border: 1px solid #3a3a3a;
  border-radius: 6px;
}
QSlider::groove:vertical {
  width: 4px;
  background: #2a2a2a;
  border-radius: 2px;
}
QSlider::handle:vertical {
  width: 12px;
  height: 12px;
  margin: 0 -4px;
  background: #555555;
  border: 1px solid #3a3a3a;
  border-radius: 6px;
}

/*
  QScrollBar / horizontal
*/

QScrollBar:horizontal {
  background: #191919;
  margin: 0px 5px;
}

QScrollBar::handle:horizontal {
  background: #2a2a2a;
  width: 5px;
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal
{
  background: #191919;
  width: 5px;
  subcontrol-origin: margin;
}

QScrollBar::add-line:horizontal {
  subcontrol-position: right;
}

QScrollBar::sub-line:horizontal {
  subcontrol-position: left;
}

QScrollBar:left-arrow:horizontal,
QScrollBar::right-arrow:horizontal
{
  width: 0px;
  height: 0px;
  background: #e0e0e0;
}

QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal
{
  background: none;
}

/*
  QScrollBar / vertical
*/

QScrollBar:vertical {
  background: #191919;
  margin: 5px 0;
}

QScrollBar::handle:vertical {
  background: #2a2a2a;
  height: 5px;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical
{
  background: #191919;
  height: 5px;
  subcontrol-origin: margin;
}

QScrollBar::add-line:vertical {
  subcontrol-position: bottom;
}

QScrollBar::sub-line:vertical {
  subcontrol-position: top;
}

QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical
{
  background: none;
}

/*
  QPushButton
*/

QPushButton,
QPushButton:enabled
{
  padding: 6px 10px;
  background: #2a2a2a;
  color: #e0e0e0;
  border: 1px solid #3a3a3a;
  border-radius: 3px;
}

QPushButton:hover {
  background: #3a3a3a;
  color: #ffffff;
  border-color: #555555;
}

QPushButton:focus {
  outline: none;
  border-color: #555555;
}

QPushButton:pressed {
  background: #3a3a3a;
  border-color: #555555;
  color: #ffffff;
}

/* Default (primary) buttons */
QPushButton:default {
  background: #555555;
  color: #151515;
  border-color: #666666;
}
QPushButton:default:hover {
  background: #666666;
  color: #ffffff;
}
QPushButton:default:pressed {
  background: #444444;
}

QPushButton:checked {
  background: #191919;
  border-color: #555555;
  color: #ffffff;
}

QPushButton:disabled {
  background: #202020;
  color: #666666;
  border-color: #2a2a2a;
}

/*
  QLineEdit
*/

QLineEdit,
QLineEdit:read-only
{
  background: #191919;
  color: #e0e0e0;
  border: none;
  padding: 4px;
}

QLineEdit:disabled,
QLineEdit:disabled:read-only
{
  color: #666666;
}

/*
  QHeaderView
*/

QHeaderView::section {
  background: #2a2a2a;
  padding: 0 5px;
  color: #e0e0e0;
  border: 1px solid #2a2a2a;
  border-left: none;
}

QHeaderView::section:hover {
  background: #3a3a3a;
  color: #ffffff;
}

QHeaderView::section:first {
  border-left: 1px solid #2a2a2a;
}

/*
  QDialog
*/

QDialog {
  background: #191919;
  border: 1px solid #2a2a2a;
}

QDialog QWidget {
  background: #191919;
  color: #e0e0e0;
}

QDialog QTextEdit, QDialog QPlainTextEdit {
  background: #151515;
  border: 1px solid #2a2a2a;
  border-radius: 3px;
  padding: 4px;
  color: #e0e0e0;
}

QDialog QLabel {
  background: transparent;
  color: #e0e0e0;
}

/*
  Preferences sidebar (QListWidget inside dialogs)
  Modern redesign with enhanced visual hierarchy
*/
QDialog QListWidget {
  background: #151515;
  color: #e0e0e0;
  border: none;
  border-right: 2px solid #2a2a2a;
  outline: none;
  padding: 12px 4px;
  font-size: 13px;
  font-weight: 500;
  spacing: 12px;
}

QDialog QListWidget::item {
  min-height: 80px;
  padding: 8px 20px;
  margin: 2px;
  border-radius: 15px;
  background: #2a2a2a;
  transition: all 0.2s ease;
  font-weight: 500;
  color: #e0e0e0;
}

QDialog QListWidget::item:hover {
  background: #3a3a3a;
  color: #ffffff;
}

QDialog QListWidget::item:selected {
  background: #202020;
  color: #ffffff;
  border: 2px solid #555555;
  font-weight: 600;
}

QDialog QTabWidget QTextEdit, QDialog QTabWidget QWidget {
  background: #191919;
  border-radius: 0;
}

QDialog QScrollBar:horizontal, QDialog QScrollBar:vertical {
  background: #151515;
}

/*
  QCheckbox / RadioButton
*/

QCheckBox, QRadioButton {
  color: #e0e0e0;
}

QCheckBox:disabled, QRadioButton:disabled {
  color: #666666;
}

/* Simple checkbox with minimal custom styling to keep native checkmark */
/* 
  Checkbox & Radio Button Styling with embedded SVG icons
*/
QCheckBox::indicator, QGroupBox::indicator, QTreeView::indicator {
  width: 17px;
  height: 17px;
}

QCheckBox::indicator:unchecked, QGroupBox::indicator:unchecked, QTreeView::indicator:unchecked {
  image: url(:/uitheme/icons/checkbox_unchecked.svg);
}

QCheckBox::indicator:checked, QGroupBox::indicator:checked, QTreeView::indicator:checked {
  image: url(:/uitheme/icons/checkbox_checked.svg);
}

QCheckBox::indicator:indeterminate, QGroupBox::indicator:indeterminate, QTreeView::indicator:indeterminate {
  image: url(:/uitheme/icons/checkbox_indeterminate.svg);
}

/*
  QComboBox
*/

QComboBox {
  background: #191919;
  color: #e0e0e0;
  padding: 4px;
  border: 1px solid #2a2a2a;
  border-radius: 3px;
}

QComboBox:focus {
  background: #191919;
  color: #ffffff;
}

QComboBox:disabled {
  color: #666666;
}

QComboBox:hover {
  background: #2a2a2a;
  color: #ffffff;
  border-color: #555555;
}

QComboBox:on {
  background: #191919;
  color: #ffffff;
}

QComboBox QAbstractItemView {
  background: #191919;
  color: #e0e0e0;
  selection-background-color: #3a3a3a;
  selection-color: #ffffff;
  outline: none;
}

QComboBox QAbstractItemView::item:hover {
  background: #2a2a2a;
  color: #ffffff;
}

QComboBox::drop-down {
  subcontrol-origin: margin;
  subcontrol-position: top right;
  width: 20px;
  background: #191919;
  border-left: 1px solid #2a2a2a;
  border-top-right-radius: 3px;
  border-bottom-right-radius: 3px;
}

QComboBox::down-arrow {
  image: url(:/uitheme/icons/arrow_down.svg);
  width: 12px;
  height: 12px;
}

/*
  QSpinBox
*/

QSpinBox {
  background: #191919;
  color: #e0e0e0;
  border: none;
  padding: 4px;
}

QSpinBox:disabled {
  color: #666666;
}

QSpinBox:focus {
  background: #2a2a2a;
  color: #ffffff;
  border: 1px solid #555555;
}

/*
  QGroupBox
*/

QGroupBox {
  background: #191919;
  border: 1px solid #2a2a2a;
  padding: 6px;
  margin-top: 14px;
  border-radius: 4px;
}

QGroupBox::title {
  subcontrol-origin: margin;
  subcontrol-position: top left;
  left: 10px;
  padding: 8px 5px 20px 5px;
}

QGroupBox QLabel {
  color: #e0e0e0;
}

QGroupBox QCheckBox {
  color: #e0e0e0;
}

QGroupBox::title:disabled {
  color: #666666;
}

/*
  TransferListWidget - Torrent Status Colors
*/

TransferListWidget {
  qproperty-downloadingStateForeground: #aaaaaa;
  qproperty-forcedDownloadingStateForeground: #cccccc;
  qproperty-downloadingMetadataStateForeground: #aaaaaa;
  qproperty-allocatingStateForeground: #777777;
  qproperty-stalledDownloadingStateForeground: #999999;
  qproperty-stalledUploadingStateForeground: #999999;
  qproperty-uploadingStateForeground: #bbbbbb;
  qproperty-forcedUploadingStateForeground: #dddddd;
  qproperty-pausedDownloadingStateForeground: #888888;
  qproperty-pausedUploadingStateForeground: #888888;
  qproperty-errorStateForeground: #ffffff;
  qproperty-missingFilesStateForeground: #ffffff;
  qproperty-queuedDownloadingStateForeground: #999999;
  qproperty-queuedUploadingStateForeground: #999999;
  qproperty-checkingDownloadingStateForeground: #aaaaaa;
  qproperty-checkingUploadingStateForeground: #aaaaaa;
  qproperty-checkingResumeDataStateForeground: #aaaaaa;
  qproperty-movingStateForeground: #aaaaaa;
  qproperty-unknownStateForeground: #666666;
}
